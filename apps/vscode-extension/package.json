{
  "name": "makoki-visualizer",
  "displayName": "Makoki Visualizer",
  "description": "View and edit YAML and JSON as an interactive tree. Search, filter, and edit values inline.",
  "version": "0.1.2",
  "publisher": "makoki",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/nangui/makoki-visualizer"
  },
  "keywords": ["yaml", "json", "jsonc", "tree", "visualizer", "editor", "config"],
  "engines": { "vscode": "^1.75.0" },
  "categories": ["Other", "Formatters", "Visualization"],
  "main": "./out/extension.js",
  "activationEvents": ["onCommand:makoki.openVisualizer", "onStartupFinished", "onLanguage:yaml", "onLanguage:json", "onLanguage:jsonc"],
  "contributes": {
    "commands": [
      {
        "command": "makoki.openVisualizer",
        "title": "Active MV",
        "icon": "$(preview)",
        "category": "Makoki Visualizer"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "makoki.openVisualizer",
          "when": "editorLangId == yaml || editorLangId == json || editorLangId == jsonc",
          "group": "navigation",
          "title": "Active MV"
        }
      ],
      "editor/context": [
        {
          "command": "makoki.openVisualizer",
          "when": "editorLangId == yaml || editorLangId == json || editorLangId == jsonc",
          "group": "1_modification",
          "title": "Open with Makoki Visualizer"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:ext && npm run build:webview",
    "build:ext": "esbuild src/extension/extension.ts --bundle --outfile=out/extension.js --platform=node --format=cjs --external:vscode",
    "build:webview": "esbuild src/webview/index.ts --bundle --outfile=out/webview.js --platform=browser --format=esm",
    "clean": "rm -rf out",
    "test": "echo \"No test specified\" && exit 0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/vscode": "^1.75.0",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "core": "workspace:*",
    "jsonc-parser": "^3.3.1",
    "yaml": "^2.8.2"
  }
}
